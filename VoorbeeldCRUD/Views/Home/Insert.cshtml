@model klant;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body class="m-3">
    <form asp-action="Insert" asp-controller="Home">
        <table class="table">
            <tr>
                <td>Naam: </td>
                <td><input type="text" asp-for="Naam" /></td>
                <td><span asp-validation-for="Naam" class="Fout"></span></td>
            </tr>
            <tr>
                <td>Saldo: </td>
                <td><input type="text" asp-for="Saldo" /></td>
                <td><span asp-validation-for="Saldo" class="Fout"></span></td>
            </tr>
        </table>
        <p><input type="submit" value="Sla klant op" class="btn-success"/></p>
    </form>
</body>
</html>
